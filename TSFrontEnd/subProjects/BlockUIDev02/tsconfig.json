{
  "ignoreDeprecations": "5.0",
  
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true, 
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force", 
    "moduleResolution":"Node",
    "sourceMap": true, 
    "strict": false,
    "esModuleInterop": true, 
    "noImplicitAny": false,
    "skipLibCheck":true,
    "verbatimModuleSyntax":true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules",
    "**/*.declaration.ts",
    "subProjects"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}