{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./",   
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "importsNotUsedAsValues":"remove", 
        "strict": false,
        
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ]
    },
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "**/globals.d.ts"   ,
        "**/*.js"           ,
        "**/*.svelte"       ,
        "**/*.ts"            ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "subProjects",
        "**/dist/*"
    ]
}   